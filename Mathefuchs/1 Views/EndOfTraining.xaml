<Page x:Class="Mathefuchs._1_Views.EndOfTraining"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Mathefuchs._1_Views" xmlns:local1="clr-namespace:Mathefuchs._2_Viewmodels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EndOfTraining">

    <Page.Background>
        <ImageBrush ImageSource="/Images/Hintergrund.png" />
    </Page.Background>
    
    <Page.DataContext>
        <local1:ViewModelDataContext/>
    </Page.DataContext>
    
    <DockPanel>
        <TextBlock DockPanel.Dock="Top" Text="Klasse, du hast deine Übung beendet!" FontSize="20" HorizontalAlignment="Center" />
        <Image Source="/Images/Fritz Standardhaltung.png" DockPanel.Dock="Left"/>
        <TextBlock DockPanel.Dock="Top" Text="{Binding info}" FontSize="20" HorizontalAlignment="Center" />


        <Button DockPanel.Dock="Right" Click="Further_Click" Content="Weiter" Grid.Row="1" Grid.Column="0" Width="120" Height="60" HorizontalAlignment="Center" />

        <Grid>
        </Grid>
    </DockPanel>
</Page>
