<Window x:Class="Mathefuchs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mathefuchs"
        mc:Ignorable="d"
        Title="Mathefuchs" Height="450" Width="800">
    <Grid>

        <Grid.Background>
            <ImageBrush ImageSource="/Images/Startbild.PNG" />
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="150"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="1" 
            Text="Mathe lernen mit Fritz dem Rechenfuchs"
            FontSize="30"
            TextAlignment="Center"
            VerticalAlignment="Center">
        </TextBlock>

        <Button x:Name="StartProgram" Grid.Row="3"
                Content="Start" 
                Click="StartProgram_Click"
                Foreground="Black"
                FontSize="30"
                FontWeight="Medium"
                Background="AliceBlue"
                Cursor="Hand"
                Width="300"
                Height="70"
                />

    </Grid>
</Window>
