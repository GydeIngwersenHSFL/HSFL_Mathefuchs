<Page x:Class="Mathefuchs._1_Views.MinigameEnd"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Mathefuchs._2_Viewmodels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MinigameEnd">

    <Page.DataContext>
        <local:ViewModelDataContext/>
    </Page.DataContext>

    <Page.Background>
        <ImageBrush ImageSource="/Images/Hintergrund.png" />
    </Page.Background>

    <DockPanel>
            <Image Source="/Images/Frida.png" DockPanel.Dock="Left"/>

            <TextBlock DockPanel.Dock="Top" Text="{Binding info}" FontSize="20"  HorizontalAlignment="Center"/>

            <Image Source="{Binding minigame.png}" DockPanel.Dock="Left"/>

            <Grid>

            <Button Click="Next_Click" Content="Weiter" Grid.Row="2" Grid.Column="2" Width="60" Height="60" Background="AntiqueWhite"></Button>

            </Grid>
        </DockPanel>
</Page>
